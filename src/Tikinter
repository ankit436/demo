import tkinter as tk
from tkinter import ttk, filedialog
from ttkbootstrap import Style

class MyApp:
    def __init__(self, root):
        self.root = root

        # Apply the 'superhero' theme from ttkbootstrap
        self.style = Style(theme='superhero')

        # Calculate screen width and height
        screen_width = root.winfo_screenwidth()
        screen_height = root.winfo_screenheight()

        # Calculate the x and y coordinates to center the window
        x_coordinate = (screen_width - 400) // 2  # Adjust 400 based on your UI width
        y_coordinate = (screen_height - 300) // 2  # Adjust 300 based on your UI height

        # Set the window position
        root.geometry(f"400x300+{x_coordinate}+{y_coordinate}")

        # Create a labeled frame
        self.label_frame = ttk.LabelFrame(root, text="My Labeled Frame")
        self.label_frame.pack(padx=10, pady=10)

        # Frame 1 inside the labeled frame as a LabelFrame
        self.frame1 = ttk.LabelFrame(self.label_frame, text="Frame 1")
        self.frame1.grid(row=0, column=0, padx=10, pady=10, sticky="ew")

        # Radio buttons inside Frame 1
        self.radio_var = tk.IntVar()
        self.radio_button1 = ttk.Radiobutton(self.frame1, text="Option 1", variable=self.radio_var, value=1)
        self.radio_button1.grid(row=0, column=0, padx=5)

        self.radio_button2 = ttk.Radiobutton(self.frame1, text="Option 2", variable=self.radio_var, value=2)
        self.radio_button2.grid(row=0, column=1, padx=5)

        # Button widget inside Frame 1
        self.button1 = ttk.Button(self.frame1, text="Click Me 1", command=self.on_button1_click)
        self.button1.grid(row=1, column=0, columnspan=2, pady=5)

        # Frame 2 inside the labeled frame as a LabelFrame
        self.frame2 = ttk.LabelFrame(self.label_frame, text="Frame 2")
        self.frame2.grid(row=1, column=0, padx=10, pady=10, sticky="ew")

        # Entry widget inside Frame 2
        self.entry_widget2 = ttk.Entry(self.frame2)
        self.entry_widget2.grid(row=0, column=0, padx=5)

        # File Choose Button and Entry inside Frame 2
        self.file_choose_button = ttk.Button(self.frame2, text="Choose File", command=self.choose_file)
        self.file_choose_button.grid(row=0, column=1, padx=5)

        self.file_entry = ttk.Entry(self.frame2, state="readonly", width=30)
        self.file_entry.grid(row=0, column=2, padx=5)

        # Button widget inside Frame 2
        self.button2 = ttk.Button(self.frame2, text="Click Me 2", command=self.on_button2_click)
        self.button2.grid(row=1, column=0, columnspan=3, pady=5)

        # Submit Button
        self.submit_button = ttk.Button(self.label_frame, text="Submit", command=self.submit)
        self.submit_button.pack(pady=10)

    def on_button1_click(self):
        selected_option = self.radio_var.get()
        print(f"Button 1 clicked! Selected Option: {selected_option}")

    def choose_file(self):
        file_path = filedialog.askopenfilename()
        if file_path:
            self.file_entry.configure(state='normal')
            self.file_entry.delete(0, tk.END)
            self.file_entry.insert(tk.END, file_path)
            self.file_entry.configure(state='readonly')

    def on_button2_click(self):
        entry_text2 = self.entry_widget2.get()
        print(f"Button 2 clicked! Entry text in Frame 2: {entry_text2}")

    def submit(self):
        file_path2 = self.entry_widget2.get()

        if file_path2:
            print("Submission successful!")
            print(f"File Path 2: {file_path2}")
        else:
            print("Please choose a valid file path before submitting.")

if __name__ == "__main__":
    root = tk.Tk()
    app = MyApp(root)
    root.mainloop()
