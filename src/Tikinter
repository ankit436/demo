import tkinter as tk
from tkinter import ttk

class RootUI:
    def __init__(self, root):
        self.root = root
        self.root.title("Root UI")

        # Create a button to open the popup
        open_popup_button = ttk.Button(self.root, text="Open Popup", command=self.open_popup)
        open_popup_button.pack(pady=20)

    def open_popup(self):
        popup_window = tk.Toplevel(self.root)
        popup_window.title("Popup UI")

        # Create a frame in the popup
        frame = ttk.Frame(popup_window, padding=20)
        frame.pack()

        # Add content to the frame
        label = ttk.Label(frame, text="Enter something:")
        label.grid(row=0, column=0, pady=10)

        entry = ttk.Entry(frame)
        entry.grid(row=1, column=0, pady=10)

        submit_button = ttk.Button(frame, text="Submit", command=lambda: self.submit(entry.get()))
        submit_button.grid(row=2, column=0, pady=10)

    def submit(self, value):
        print(f"Submitted: {value}")

if __name__ == "__main__":
    root = tk.Tk()
    root_ui = RootUI(root)
    root.mainloop()
