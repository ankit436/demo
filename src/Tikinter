import tkinter as tk
from tkinter import filedialog

class MyApp:
    def __init__(self, root):
        self.root = root

        # Create a labeled frame
        self.label_frame = tk.LabelFrame(root, text="My Labeled Frame")
        self.label_frame.pack(padx=10, pady=10)

        # Frame 1 inside the labeled frame
        self.frame1 = tk.Frame(self.label_frame)
        self.frame1.pack(pady=10)

        # Entry widget inside Frame 1
        self.entry_widget1 = tk.Entry(self.frame1)
        self.entry_widget1.pack(pady=5)

        # Radio buttons inside Frame 1
        self.radio_var = tk.IntVar()
        self.radio_button1 = tk.Radiobutton(self.frame1, text="Option 1", variable=self.radio_var, value=1)
        self.radio_button1.pack()

        self.radio_button2 = tk.Radiobutton(self.frame1, text="Option 2", variable=self.radio_var, value=2)
        self.radio_button2.pack()

        # Button widget inside Frame 1
        self.button1 = tk.Button(self.frame1, text="Click Me 1", command=self.on_button1_click)
        self.button1.pack()

        # Frame 2 inside the labeled frame
        self.frame2 = tk.Frame(self.label_frame)
        self.frame2.pack(pady=10)

        # Entry widget inside Frame 2
        self.entry_widget2 = tk.Entry(self.frame2)
        self.entry_widget2.pack(pady=5)

        # File Choose Button and Entry inside Frame 2
        self.file_choose_button = tk.Button(self.frame2, text="Choose File", command=self.choose_file)
        self.file_choose_button.pack(side=tk.LEFT, padx=5)

        self.file_entry = tk.Entry(self.frame2, state="readonly", width=40)
        self.file_entry.pack(side=tk.LEFT, padx=5)

        # Button widget inside Frame 2
        self.button2 = tk.Button(self.frame2, text="Click Me 2", command=self.on_button2_click)
        self.button2.pack()

        # Submit Button
        self.submit_button = tk.Button(self.label_frame, text="Submit", command=self.submit)
        self.submit_button.pack(pady=10)

    def on_button1_click(self):
        entry_text1 = self.entry_widget1.get()
        selected_option = self.radio_var.get()
        print(f"Button 1 clicked! Entry text in Frame 1: {entry_text1}, Selected Option: {selected_option}")

    def choose_file(self):
        file_path = filedialog.askopenfilename()
        if file_path:
            self.file_entry.configure(state='normal')
            self.file_entry.delete(0, tk.END)
            self.file_entry.insert(tk.END, file_path)
            self.file_entry.configure(state='readonly')

    def on_button2_click(self):
        entry_text2 = self.entry_widget2.get()
        print(f"Button 2 clicked! Entry text in Frame 2: {entry_text2}")

    def submit(self):
        file_path1 = self.file_entry.get()
        file_path2 = self.entry_widget2.get()

        if file_path1 and file_path2:
            print("Submission successful!")
            print(f"File Path 1: {file_path1}")
            print(f"File Path 2: {file_path2}")
        else:
            print("Please choose valid file paths before submitting.")

if __name__ == "__main__":
    root = tk.Tk()
    app = MyApp(root)
    root.mainloop()
