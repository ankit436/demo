CREATE TABLE RINDATA_ROI_METRIC (
    METRIC_ID INT NOT NULL,
    METRIC_NAME VARCHAR2(50) NOT NULL,
    PROJECT_ID INT NOT NULL,
    TYPE_NAME VARCHAR2(100) NOT NULL,
    CREATED_DATE DATE,
    UPDATED_DATE DATE,
    IS_DELETED NUMBER(1) DEFAULT 0,
    PRIMARY KEY (METRIC_ID)
);

CREATE TABLE RINDATA_ROI_PROJECT_USER (
    PROJECT_ID INT NOT NULL,
    USER_ID NVARCHAR(50),
    CREATED_DATE DATE,
    IS_DELETED NUMBER(1) DEFAULT 0,
    PRIMARY KEY (PROJECT_ID, USER_ID),
    FOREIGN KEY (PROJECT_ID) REFERENCES RINDATA_ROI_PROJECT (PROJECT_ID)
);

CREATE TABLE RINDATA_ROI_PROJECT (
    PROJECT_ID INT NOT NULL,
    NAME NVARCHAR(100) NOT NULL,
    START_DATE DATE,
    END_DATE DATE,
    TYPE_ID INT NOT NULL,
    SPONSOR NVARCHAR(200),
    PROJECT_OWNER NVARCHAR(200),
    STATUS INT NOT NULL,
    BUSINESS_OWNER NVARCHAR(200),
    BUSINESS_UNIT NVARCHAR(200),
    PROGRAM INT NOT NULL,
    PARENT_PROJECT INT,
    REGION NVARCHAR(200),
    BENEFIT_OWNER NVARCHAR(200),
    FUND NVARCHAR(200),
    FINANCE INT NOT NULL,
    INITIATIVE_ID INT NOT NULL,
    ENGAGEMENT_CLIENT_COUNT NVARCHAR(200),
    DELIVERY_CLIENT_NAME NVARCHAR(200),
    BENEFIT_CLIENT_NAME NVARCHAR(200),
    REGION INT NOT NULL,
    BENEFIT_TYPE NVARCHAR(200),
    PITCH_REPRESENTATIVE NVARCHAR(200),
    END_DATE INT,
    GAM_ID INT,
    IS_DELETED NUMBER(1) DEFAULT 0,
    PRIMARY KEY (PROJECT_ID),
    FOREIGN KEY (TYPE_ID) REFERENCES RINDATA_ROI_TYPE (TYPE_ID),
    FOREIGN KEY (STATUS) REFERENCES RINDATA_ROI_STATUS (STATUS_ID),
    FOREIGN KEY (PROGRAM) REFERENCES RINDATA_ROI_PROGRAM (PROGRAM_ID),
    FOREIGN KEY (PARENT_PROJECT) REFERENCES RINDATA_ROI_PROJECT (PROJECT_ID),
    FOREIGN KEY (REGION) REFERENCES RINDATA_ROI_REGION (REGION_ID)
);

CREATE TABLE RINDATA_ROI_REPORT_TYPE (
    REPORT_TYPE_ID INT NOT NULL,
    REPORT_TYPE_NAME NVARCHAR(50) NOT NULL,
    PROJECT_ID INT NOT NULL,
    REPORT_FREQUENCY NVARCHAR(50) NOT NULL,
    CREATED_DATE DATE,
    UPDATED_DATE DATE,
    IS_DELETED NUMBER(1) DEFAULT 0,
    PRIMARY KEY (REPORT_TYPE_ID),
    FOREIGN KEY (PROJECT_ID) REFERENCES RINDATA_ROI_PROJECT (PROJECT_ID)
);

CREATE TABLE RINDATA_ROI_TYPE (
    TYPE_ID INT NOT NULL,
    TYPE_NAME NVARCHAR(100) NOT NULL,
    CREATED_DATE DATE,
    CREATED_BY NVARCHAR(200),
    IS_DELETED NUMBER(1) DEFAULT 0,
    PRIMARY KEY (TYPE_ID)
);

CREATE TABLE RINDATA_ROI_STATUS (
    STATUS_ID INT NOT NULL,
    PROJECT_STATUS NVARCHAR(100) NOT NULL,
    CREATED_DATE DATE,
    CREATED_BY NVARCHAR(200),
    IS_DELETED NUMBER(1) DEFAULT 0,
    PRIMARY KEY (STATUS_ID)
);

CREATE TABLE RINDATA_ROI_PROGRAM (
    PROGRAM_ID INT NOT NULL,
    PROGRAM_NAME NVARCHAR(100) NOT NULL,
    CREATED_DATE DATE,
    CREATED_BY NVARCHAR(200),
    IS_DELETED NUMBER(1) DEFAULT 0,
    PRIMARY KEY (PROGRAM_ID)
);

CREATE TABLE RINDATA_ROI_PHASE (
    PHASE_ID INT NOT NULL,
    PROJECT_PHASE NVARCHAR(100) NOT NULL,
    CREATED_DATE DATE,
    CREATED_BY NVARCHAR(200),
    IS_DELETED NUMBER(1) DEFAULT 0,
    PRIMARY KEY (PHASE_ID)
);

CREATE TABLE RINDATA_ROI_BUSINESS_UNIT (
    BU_ID INT NOT NULL,
    BUSINESS_UNIT_NAME NVARCHAR(200) NOT NULL,
    CREATED_DATE DATE,
    CREATED_BY NVARCHAR(200),
    IS_DELETED NUMBER(1) DEFAULT 0,
    PRIMARY KEY (BU_ID)
);

CREATE TABLE RINDATA_ROI_REGION (
    REGION_ID INT NOT NULL,
    BUSINESS_UNIT_NAME NVARCHAR(200) NOT NULL,
    CREATED_DATE DATE,
    IS_DELETED NUMBER(1) DEFAULT 0,
    PRIMARY KEY (REGION_ID)
);

CREATE TABLE RINDATA_ROI_PROJECT_BENEFITS (
    BENEFIT_ID INT NOT NULL,
    PROJECT_ID INT NOT NULL,
    NAME NVARCHAR(200),
    CONTENT CLOB,
    AS_OF_DATE DATE,
    CREATED_DATE DATE NOT NULL,
    CREATED_BY NVARCHAR(200),
    IS_DELETED NUMBER(1) DEFAULT 0,
    PRIMARY KEY (BENEFIT_ID),
    FOREIGN KEY (PROJECT_ID) REFERENCES RINDATA_ROI_PROJECT (PROJECT_ID)
);

CREATE TABLE RINDATA_ROI_REPORT (
    REPORT_ID INT NOT NULL,
    PROJECT_ID INT NOT NULL,
    REPORT_TYPE_ID INT NOT NULL,
    NAME NVARCHAR(200),
    CONTENT CLOB,
    AS_OF_DATE DATE,
    CREATED_DATE DATE NOT NULL,
    CREATED_BY NVARCHAR(200),
    IS_DELETED NUMBER(1) DEFAULT 0,
    PRIMARY KEY (REPORT_ID),
    FOREIGN KEY (PROJECT_ID) REFERENCES RINDATA_ROI_PROJECT (PROJECT_ID),
    FOREIGN KEY (REPORT_TYPE_ID) REFERENCES RINDATA_ROI_REPORT_TYPE (REPORT_TYPE_ID)
);

CREATE TABLE RINDATA_ROI_EXPRESSION (
    EXPRESSION_ID INT NOT NULL,
    REPORT_TYPE_ID INT NOT NULL,
    NAME NVARCHAR(200),
    EXPRESSION CLOB,
    CREATE_DATE DATE,
    UPDATED_DATE DATE,
    IS_DELETED NUMBER(1) DEFAULT 0,
    PRIMARY KEY (EXPRESSION_ID),
    FOREIGN KEY (REPORT_TYPE_ID) REFERENCES RINDATA_ROI_REPORT_TYPE (REPORT_TYPE_ID)
);

CREATE TABLE RINDATA_ROI_REPORT_TYPE_METRIC (
    REPORT_TYPE_ID INT NOT NULL,
    METRIC_ID INT NOT NULL,
    IS_DELETED NUMBER(1) DEFAULT 0,
    PRIMARY KEY (REPORT_TYPE_ID, METRIC_ID),
    FOREIGN KEY (REPORT_TYPE_ID) REFERENCES RINDATA_ROI_REPORT_TYPE (REPORT_TYPE_ID),
    FOREIGN KEY (METRIC_ID) REFERENCES RINDATA_ROI_METRIC (METRIC_ID)
);
